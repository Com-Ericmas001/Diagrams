<Window x:Class="Com.Ericmas001.Diagrams.Demo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vmd="clr-namespace:Com.Ericmas001.Diagrams.Demo.ViewModels.Design"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=vmd:MainViewModelDesign, IsDesignTimeCreatable=True}" 
        Title="MainWindow" Height="450" Width="800">
    <ItemsControl ItemsSource="{Binding Graph.Elements}" HorizontalAlignment="Center" VerticalAlignment="Center">
        <ItemsControl.Resources>
            <ResourceDictionary>
                <ResourceDictionary.MergedDictionaries>
                    <ResourceDictionary Source="/Com.Ericmas001.Diagrams.Xaml;component/Ressources/ElementsDataTemplate.xaml"/>
                </ResourceDictionary.MergedDictionaries>
            </ResourceDictionary>
        </ItemsControl.Resources>
        <ItemsControl.ItemsPanel>
            <ItemsPanelTemplate>
                <Canvas Width="{Binding Graph.Width}" Height="{Binding Graph.Height}" />
            </ItemsPanelTemplate>
        </ItemsControl.ItemsPanel>
    </ItemsControl>
</Window>
